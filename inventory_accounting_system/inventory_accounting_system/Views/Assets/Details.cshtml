@model inventory_accounting_system.Models.Asset

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Asset</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.SerialNum != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SerialNum)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SerialNum)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.InventNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InventNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd>
            <img src="../@Model.ImagePath" width="100" height="100" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
        @if (Model.DocumentPath != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Document)
            </dt>
            <dd>
                <a style="color: dodgerblue;" asp-controller="Assets" asp-action="Download" asp-route-id="@Model.Id" class="not-filled recent">@Model.Name</a>
            </dd>
        }
        else
        {
            <dt>
                @Html.DisplayNameFor(model => model.Document)
            </dt>
            <dd>
                <a style="color: darkgrey;" asp-controller="Assets" asp-action="Download" asp-route-id="@Model.Id" class="not-filled recent">@Model.Name</a>
            </dd>
        }
            
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

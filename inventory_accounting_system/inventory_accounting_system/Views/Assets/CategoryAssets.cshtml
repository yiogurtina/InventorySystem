@model IEnumerable<inventory_accounting_system.Models.Asset>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string dateAction = @ViewBag.dateAction;
}

<h2>Имущество</h2>


<table class="table">
    <thead>
        <tr style="background-color: whitesmoke">
            <th class="text-left">
                <a asp-action="Index" style="text-decoration: none;" asp-route-sorting="@ViewBag.IsActiveSort">
                    <strong>Выбрать</strong>
                </a>
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.InventNumber)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th class="text-left">
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Category)
            </th>

            <th class="text-left">
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" id="assetIdCheckBox" value="@item.Id" onchange="OnChangeCheckBoxFunc(this)" />
                </td>

                <td class="text-left col-sm-4" onclick="window.location.href='/Assets/Details?id=@item.Id'; return false;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-left col-sm-4" onclick="window.location.href='/Assets/Details?id=@item.Id'; return false;">
                    @Html.DisplayFor(modelItem => item.InventNumber)
                </td>
                <td class="text-left col-sm-4" onclick="window.location.href='/Assets/Details?id=@item.Id'; return false;">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td class="text-left col-sm-1">
                    <a asp-controller="Assets" asp-action="Download" asp-route-id="@item.Id" class="not-filled recent">@item.Name</a>
                </td>

                <td class="text-left col-sm-4" onclick="window.location.href='/Assets/Details?id=@item.Id'; return false;">
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td class="text-left col-sm-4" onclick="window.location.href='/Assets/Details?id=@item.Id'; return false;">
                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                </td>
                @*<td class="col-sm-3">
                        <div>
                            <a class="btn btn-default" asp-action="Move" asp-route-id="@item.Id">Move</a>
                            <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>*@
            </tr>

        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" onclick="modalShowHendler()">Закрепить</a>
</div>


@*Modal window*@

<div class="modal fade" id="newAssetModal">
    <div class="modal-dialog modal-lg" style=" width: 300px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Закрепить</h4>

                <div class="row">
                    <div class="col-md-4">
                        <form>
                            <div class="form-group" id="officeSelect">
                                <label class="control-label">Офис/Склад</label>
                                <select class="form-control" id="officeIdSelect" onchange="OnChangeOfficeId(this)" style=" width: 270px !important;" asp-items="ViewBag.OfficeId"></select>
                            </div>
                            <div class="form-group" id="employeeSelect">
                                <label class="control-label">Сотрудник</label>
                                <select class="form-control" id="employeeIdSelect" onchange="OnChangeEmployeeId(this)" style=" width: 270px !important;" asp-items="ViewBag.EmployeeId"></select>
                            </div>
                            <div class="form-group" id="dateAction">
                                <label class="control-label">Дата</label>
                                <input id="dateAction" type="date" value="@dateAction" class="form-control" style=" width: 270px !important;" />

                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <form id="NewAssetForm">

                <div class="modal-footer">
                    <div>
                        <button id="CreateMethod" type="submit" onclick="getCheckedCheckBoxes()" class="btn btn-primary">Ok</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>

@section scripts{
    <script>

        var officeId;
        var employeeId;
        var dateAction;

        function modalShowHendler() {
            $("#newAssetModal").modal();
            officeId = document.querySelector('#officeIdSelect').value;
            employeeId = document.querySelector('#employeeIdSelect').value;
            dateAction = document.querySelector('#dateAction').value;
        }

        checkedCheckBox = [];

        function OnChangeCheckBoxFunc(e) {
            var assetId = e.value;
            if (checkedCheckBox.indexOf(assetId) > -1) {
                var elementIndex = checkedCheckBox.indexOf(assetId);
                checkedCheckBox.splice(elementIndex, 1);
            } else {
                checkedCheckBox.push(assetId);
            }
        }

        function OnChangeOfficeId(e) {
            officeId = e.value;
        }

        function OnChangeEmployeeId(e) {
            employeeId = e.value;
        }



        function getCheckedCheckBoxes() {
            employeeId = document.querySelector('#employeeIdSelect').value;
            dateAction = document.querySelector('#dateAction').value;
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Check", "Assets")',
                data: {
                    officeId: officeId,
                    assetId: checkedCheckBox,
                    employeeId: employeeId,
                    dateAction: dateAction,
                    inIndex: 0
                },
                success: function (data) {
                    console.log('success!');
                }
            });
        }


    </script>
}
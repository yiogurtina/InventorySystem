@model inventory_accounting_system.Models.EventAsset

@{
    ViewData["Title"] = "AddEvent";
    string assetId = (string)ViewData["AssetId"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddEvent</h2>

<h4>EventAsset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="AssetEvent" asp-action="AddNewEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Periodicity</label>
                <select name="periodicity" class="form-control" asp-items="ViewBag.Periods"></select>
            </div>
            <div class="form-group">
                <input asp-for="AssetId" value="@assetId" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@assetId

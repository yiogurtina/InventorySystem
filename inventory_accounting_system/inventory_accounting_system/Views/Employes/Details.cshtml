@model Employee
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading" >
    <div class="col-lg-10">
        <h2>Информация о сотруднике</h2>
        <ol class="breadcrumb">           
            <li>
                 <a href="~/Employes/Users">Сотрудники</a>
            </li>
            <li class="active">
                <strong>Информация о сотруднике</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<hr />
        <div class="wrapper wrapper-content">
            <div class="row animated fadeInRight">
                <div class="col-md-4">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Информация о сотруднике</h5>
                        </div>
                        <div>
                            <div class="ibox-content no-padding border-left-right"> 
                                <img alt="image" class="img-responsive" src="~/img/U1.jpg">
                            </div>
                            <div class="ibox-content profile-content">
                                <h3><strong>@Model.Login</strong></h3>
                                <h4><strong>@Model.Surname</strong></h4>
                                <h5><strong>@Model.Email</strong></h5>
                                <h5><strong>@Model.PhoneNumber</strong></h5>
                                <p><i class="fa fa-map-marker"></i> Бишкек </p>
                               
                                 <p>
                                    Статус: @Model.LockoutEnabled
                                </p>

                                 <h5>
                                    Офис: @Model.Office.Title
                                </h5>
                                <div class="user-button">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a class="btn btn-w-m btn-info" style="margin-top: 15px;" asp-controller="Assets" asp-action="EmployeeOrderReport" asp-route-employeeId="@Model.Id">Распечатать имущество</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                    </div>
                </div>
                
                    </div>
                    <h3>Список имущества сотрудника</h3>
<hr />
                      

                  


@{
    ViewData["Title"] = "Delete User";
    string userId = (string)ViewData["UserId"];
    string name = (string)ViewData["Name"];
    string surname = (string)ViewData["Surname"];
}

<h2>Delete User</h2>

<dl class="dl-horizontal">
    <dt>
       Имя
    </dt>
    <dd>
        @name
    </dd>
    <dt>
       Фамилия
    </dt>
    <dd>
        @surname
    </dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    
    <input type="hidden" name="id" value="@userId" />
    <input class="btn btn-success" value="Удалить" type="submit" />
</form>
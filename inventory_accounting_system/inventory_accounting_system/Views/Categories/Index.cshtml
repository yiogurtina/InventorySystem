@model IEnumerable<inventory_accounting_system.Models.Category>
  @{ ViewData["Title"] = "Index"; Layout = "~/Views/Shared/_Layout.cshtml"; }


  <div class="row wrapper border-bottom white-bg page-heading" style="margin-bottom: 15px;">
    <div class="col-lg-10">
      <h2>Категории</h2>
      <ol class="breadcrumb" style="margin-bottom: 10px;">
        <li>
          <a href="~/Offices/Index">Главная</a>
        </li>
        <li class="active">
          @{if (Model != null) {
          <strong>Категории</strong>
          } }
        </li>
      </ol>
    </div>
    <div class="col-lg-2 col-xs-2">

    </div>
  </div>
    <hr />
   
    <table class="table table-striped table-bordered table-hover dataTables-example col-lg-12">
      <thead class="gradeX">
        <tr>
          <th class="col-lg-6">
            @Html.DisplayNameFor(model => model.Name)
          </th>
          <th class="col-lg-3">
            @Html.DisplayNameFor(model => model.Prefix)
          </th>
          <th class="col-lg-3"></th>
        </tr>
      </thead>
      <tbody >
        @foreach (var item in Model) {
        <tr >
            <td onclick="window.location.href='/Categories/Details?id=@item.Id'; return false;">
              @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td onclick="window.location.href='/Categories/Details?id=@item.Id'; return false;">
              @Html.DisplayFor(modelItem => item.Prefix)
            </td>

            <td class="row">
              <div style="display: flex; margin-left: 15px;">
                <a class="btn  btn-danger" asp-action="Delete" asp-route-id="@item.Id" style="margin-right: 15px;">Удалить</a>
                
                <a class="btn  btn-info" asp-action="Edit" asp-route-id="@item.Id" >Редактировать</a>

                  <!-- <a class="close-link col-sm-4" asp-action="Details" asp-route-id="@item.Id">
                  <i class="fa fa-bars" style="color: #11a7c2; font-size: 17pt; "></i></a> -->

              </div>
            </td>           
        </tr>
        }
      </tbody>
    </table>

     <p>
      <a class="btn btn-w-m btn-primary"  asp-action="Create">Создать</a>
    </p>
  </div>
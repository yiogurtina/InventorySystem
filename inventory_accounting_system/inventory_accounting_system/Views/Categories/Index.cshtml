@model IEnumerable<inventory_accounting_system.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Категории</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать</a>
    <a class="btn btn-primary" asp-controller="Events" asp-action="Index">Создать событие</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prefix)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prefix)
            </td>
            <td class="col-sm-3">
                <div>
                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

@model inventory_accounting_system.Models.Supplier

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading" >
    <div class="col-lg-10">
        <h2>Редактировать запись</h2>
        <ol class="breadcrumb">           
            <li>
                 <a href="~/Suppliers">Поставщики</a>
            </li>
            <li class="active">
                <strong>Редактировать запись</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4" style="margin-left: 33%;  background-color: #F3F3F3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-w-m btn-primary" style="margin-top: 250px;" />
            </div>
        </form>
    </div>
</div>

<hr/>